{
  "name": "natural-configuration",
  "version": "1.0.0",
  "description": "Simple framework for parsing natural language configuration using regular expressions",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FTWinston/NaturalConfigurationJS.git"
  },
  "author": "FTWinston",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FTWinston/NaturalConfigurationJS/issues"
  },
  "keywords": [
    "natural language",
    "configuration",
    "regular expression"
  ],
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
